<dx:ThemedWindow 
    x:Class="GrpcNotifier.Client.WpfDx.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:GrpcNotifier.Client.WpfDx.Views"
    xmlns:ViewModels="clr-namespace:GrpcNotifier.Client.WpfDx.ViewModels"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
    DataContext="{dxmvvm:ViewModelSource Type=ViewModels:MainWindowViewModel}"
    Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100px"/>
        </Grid.RowDefinitions>
        <Views:MainView Grid.Row="0"/>
        <ListBox Grid.Row="1" x:Name="History"
                 ItemsSource="{Binding NotificationHistory}" />
    </Grid>
</dx:ThemedWindow>